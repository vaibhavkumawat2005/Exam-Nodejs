<div class="task-item glass">
    <div class="task-item-header">
        <h3><%= task.title %></h3>
        <span class="badge badge-status-<%= task.status.replace(' ', '.') %>"><%= task.status %></span>
    </div>
    <p class="task-description">
        <%= task.description %>
    </p>
    <div class="task-footer">
        <div class="task-meta">
            <% if (task.category) { %>
                <span class="badge badge-category"><i class="fas fa-tag"></i> <%= task.category.name %></span>
            <% } %>
            <% if (user.role === 'admin' && task.user) { %>
                <span class="badge badge-user"><i class="fas fa-user-shield"></i> <%= task.user.username %></span>
            <% } %>
        </div>
        <div class="task-actions">
            <a href="/tasks/edit/<%= task._id %>" class="btn btn-icon"><i class="fas fa-edit"></i></a>
            <form action="/tasks/delete/<%= task._id %>" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-icon delete-btn"><i class="fas fa-trash"></i></button>
            </form>
        </div>
    </div>
</div>
