<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Categories</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <%- include('partials/navbar', { user: user }) %>

    <div class="main-content container">
        <div class="header-container glass">
            <h2><i class="fas fa-tags"></i> Manage Categories</h2>
        </div>

        
        <div class="category-form-container glass">
            <h3><i class="fas fa-plus-circle"></i> Add New Category</h3>
            <form action="/categories/add" method="POST" class="category-form">
                <div class="form-group">
                    <input type="text" name="name" placeholder="Enter category name" required>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i> Add</button>
                </div>
            </form>
        </div>

        
        <div class="category-list-container glass">
            <h3><i class="fas fa-list-ul"></i> Existing Categories</h3>
            <div class="category-list">
                <% if (categories.length > 0) { %>
                    <% categories.forEach(category => { %>
                        <div class="category-item">
                            <span><%= category.name %></span>
                            <form action="/categories/delete/<%= category._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this category?');">
                                <button type="submit" class="btn btn-danger btn-icon"><i class="fas fa-trash-alt"></i></button>
                            </form>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="empty-state">No categories found. Add one above!</p>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>